{% extends 'base.html.twig' %}

{% block title %}Détails Hospitalisation{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2>Dossier d'Hospitalisation</h2>
        <span class="badge bg-success fs-5">Actif</span>
    </div>

    <div class="row">
       
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">Infos Patient</div>
                <div class="card-body">
                    <p><strong>Nom :</strong> {# Patient Nom #}</p>
                    <p><strong>Motif :</strong> {# Motif #}</p>
                    <p><strong>Entrée :</strong> {# Date #}</p>
                </div>
            </div>
        </div>

       
        <div class="col-md-8">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#clinique">Clinique</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#traitements">Traitements</button>
                </li>
            </ul>
            <div class="tab-content border border-top-0 p-3 bg-white">
                <div class="tab-pane fade show active" id="clinique">
                    <h5>Constantes vitales</h5>
                    <table class="table table-sm">
                        <tr><th>Tension :</th><td>{# tension #} 12/8</td></tr>
                        <tr><th>Température :</th><td>{# temp #} 37°C</td></tr>
                        <tr><th>Pouls :</th><td>{# pouls #} 80 bpm</td></tr>
                    </table>
                </div>
                <div class="tab-pane fade" id="traitements">
                    <h5>Traitements en cours</h5>
                    <ul class="list-group">
                        <li class="list-group-item">{# traitement description #} Exemple de soin</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}